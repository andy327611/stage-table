<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thurmer.gedvindbor_table.SettingsActivity">

    <TextView
        android:id="@+id/defaultUnitTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default unit:"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="126dp"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/settingsTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp" />

    <TextView
        android:id="@+id/settingsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:text="Settings"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="126dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/defaultLanguageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default langauge:"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="74dp"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/defaultUnitTextView"
        android:layout_alignLeft="@+id/defaultUnitTextView"
        android:layout_alignStart="@+id/defaultUnitTextView" />

    <Spinner
        android:id="@+id/unitSpinner"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/defaultUnitTextView"
        android:layout_alignLeft="@+id/languageSpinner"
        android:layout_alignStart="@+id/languageSpinner" />

    <Spinner
        android:id="@+id/languageSpinner"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/defaultLanguageTextView"
        android:layout_toRightOf="@+id/defaultLanguageTextView"
        android:layout_toEndOf="@+id/defaultLanguageTextView"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />
</android.widget.RelativeLayout>
