<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thurmer.gedvindbor_table.StandardDataActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"

        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"

        android:gravity="center_vertical|center_horizontal"
        android:text="Pitch"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/standardNameTextView"

        android:layout_width="match_parent"
        android:layout_height="62dp"

        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:textAlignment="center"
        android:textSize="42sp"/>

    <TextView
        android:id="@+id/textview14"

        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"

        android:gravity="center_vertical|center_horizontal"
        android:text="Inner diameter"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/textView10"

            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"

            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="Min"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"/>

        <TextView
            android:id="@+id/textView11"

            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"

            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="Max"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/minTextView"

            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"

            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/maxTextView"

            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"

            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"

        android:layout_width="match_parent"
        android:layout_height="35dp"

        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:text="predrilling diameter"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/predrillingDiameterTextView"

        android:layout_width="match_parent"
        android:layout_height="35dp"

        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/innerDiameterTextView"

        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"

        android:gravity="center_vertical|center_horizontal"
        android:text="predrilling forming diameter"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/predrillingFormingDiameterTextView"

        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"

        android:gravity="center_vertical|center_horizontal"
        android:textSize="24sp" />

</android.widget.LinearLayout>
